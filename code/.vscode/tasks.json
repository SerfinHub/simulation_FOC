{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure (MinGW+Ninja)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d", "/c",
        "set \"PATH=C:\\msys64\\mingw64\\bin;C:\\msys64\\usr\\bin;%PATH%\" && cmake -S . -B build-mingw -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_MAKE_PROGRAM=C:\\msys64\\mingw64\\bin\\ninja.exe -DCMAKE_C_COMPILER=C:\\msys64\\mingw64\\bin\\gcc.exe -DCMAKE_CXX_COMPILER=C:\\msys64\\mingw64\\bin\\g++.exe"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMake: build (MinGW+Ninja)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d", "/c",
        "set \"PATH=C:\\msys64\\mingw64\\bin;C:\\msys64\\usr\\bin;%PATH%\" && cmake --build build-mingw"
      ],
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": ["CMake: configure (MinGW+Ninja)"],
      "problemMatcher": []
    },
    {
      "label": "CMake: clean (remove build-mingw)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d", "/c",
        "if exist build-mingw rmdir /s /q build-mingw"
      ],
      "problemMatcher": []
    }
  ]
}